/* pages/message/message.wxss */
page {
  background-color: #f1f1f1;
}
.card {
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  margin: 60rpx 20rpx; 
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.card .card-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.card .card-date {
  font-size: 14px;
  color: #ccc;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.card image {
  width: 100%;
  height: 300rpx;
}

.card .card-desc {
  font-size: 16px;
  color: #333;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.card .card-read {
  margin-top: 20rpx;
  font-size: 14px;
  color: #666;
}
